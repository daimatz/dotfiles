#
# screen
#

defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8

escape 
bind  copy
# escape 
# bind  copy
# hardstatus alwayslastline "%w"
# hardstatus ignore "%w | %h"
hardstatus alwayslastline "%{= dwk} %-w%{= yk}%n %t%{-}%+w"
# hardstatus alwayslastline "%{= wk} %-w%{=bu dr}%n %t%{-}%+w"

bind c screen
# bind  copy
bind  copy
bind y paste . # yank
bind  paste .

bind 2 split
bind o focus # <TAB> も同じ
bind 1 only
bind 0 remove

autodetach on

startup_message off
defscrollback 300000

# コピーモードで Emacs like
# http://d.hatena.ne.jp/l1o0/20100803/1280844729
# やっぱ Vim like のほうがいいかも。でも少しだけ Emacs like で

